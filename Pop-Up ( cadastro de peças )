<body>

  <button class="open-popup-btn" onclick="openPopup()">Cadastrar peças</button>

  <div class="popup-container" id="popupContainer">
    <div class="popup">
      <div class="popup-header">Cadastro de peças</div>

      <input type="text" placeholder="Nome" id="nome">

      <div class="row">
        <input type="text" placeholder="Modelo" id="modelo">
        <input type="number" placeholder="Estoque" id="estoque">
      </div>

      <input type="text" placeholder="Distribuidor" id="distribuidor">

      <div class="row">
        <input type="date" placeholder="Data de aquisição" id="dataAquisicao">
        <input type="text" placeholder="Garantia" id="garantia">
      </div>

      <div class="row">
        <input type="text" placeholder="Observação" id="observacao">
        <input type="text" placeholder="R$" id="preco" pattern="\d+([.,]\d{1,2})?" title="Informe um valor numérico">
      </div>

      <div class="popup-buttons">
        <button class="cancel-btn" onclick="closePopup()">Cancelar</button>
        <button class="submit-btn" onclick="submitForm()">Cadastrar</button>
      </div>
    </div>
  </div>

  <script>
    const popupContainer = document.getElementById('popupContainer');

    function openPopup() {
      popupContainer.classList.add('active');
    }

    function closePopup() {
      clearFields();
      popupContainer.classList.remove('active');
    }

    function submitForm() {
      const precoRaw = document.getElementById('preco').value.trim();
      const preco = parseFloat(precoRaw.replace(',', '.')) || 0;

      const data = {
        nome: document.getElementById('nome').value.trim(),
        modelo: document.getElementById('modelo').value.trim(),
        estoque: document.getElementById('estoque').value.trim(),
        distribuidor: document.getElementById('distribuidor').value.trim(),
        dataAquisicao: document.getElementById('dataAquisicao').value.trim(),
        garantia: document.getElementById('garantia').value.trim(),
        observacao: document.getElementById('observacao').value.trim(),
        preco: preco
      };

      console.log("Peça cadastrada:", data);
      alert("Peça cadastrada com sucesso!");

      closePopup();
    }

    function clearFields() {
      document.getElementById('nome').value = "";
      document.getElementById('modelo').value = "";
      document.getElementById('estoque').value = "";
      document.getElementById('distribuidor').value = "";
      document.getElementById('dataAquisicao').value = "";
      document.getElementById('garantia').value = "";
      document.getElementById('observacao').value = "";
      document.getElementById('preco').value = "";
    }

    window.addEventListener('click', function(event) {
      if (event.target === popupContainer) {
        closePopup();
      }
    });
  </script>

</body>
</html>
