  <title>Cadastro de Serviços</title>
  <style>
    /* Corpo da página */
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f4f8;
      margin: 0;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Botão que abre o pop-up */
    .open-popup-btn {
      padding: 12px 20px;
      background-color: #2c5f7d;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
    }

    /* Overlay escuro do pop-up */
    .popup-container {
      display: flex;
      justify-content: center;
      align-items: center;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    /* Estado ativo (visível) */
    .popup-container.active {
      opacity: 1;
      visibility: visible;
    }

    /* Pop-up */
    .popup {
      background-color: #e6edf3;
      padding: 20px;
      border-radius: 16px;
      width: 300px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      transform: scale(0.95);
      opacity: 0;
      transition: all 0.3s ease;
      box-sizing: border-box;
    }

    .popup-container.active .popup {
      transform: scale(1);
      opacity: 1;
    }

    /* Cabeçalho */
    .popup-header {
      background-color: #2c5f7d;
      color: white;
      padding: 12px;
      border-radius: 12px 12px 0 0;
      font-size: 18px;
      text-align: center;
      margin: -20px -20px 20px -20px;
    }

    /* Inputs e textarea */
    .popup input,
    .popup textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 12px;
      border: none;
      border-radius: 8px;
      background-color: #4a7593;
      color: white;
      font-size: 13px;
      box-sizing: border-box; /* garante alinhamento consistente */
    }

    .popup input::placeholder,
    .popup textarea::placeholder {
      color: #d1e0eb;
    }

    /* Botões */
    .popup-buttons {
      display: flex;
      justify-content: space-between;
